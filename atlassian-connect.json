{
  "key": "pokemon-go-server-status-bot",
  "name": "Pokemon Go Server Status Bot",
  "description": "My very first HipChat add-on",
  "vendor": {
    "name": "Philip Ross",
    "url": "https://github.com/baseballlover723/"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/icon.jpg",
        "url@2x": "{{localBaseUrl}}/img/icon.jpg"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": [
      {
        "url": "{{localBaseUrl}}/server",
        "pattern": "^/server",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/add",
        "pattern": "^/add",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/remove",
        "pattern": "^/remove",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/subs",
        "pattern": "^/subs",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/help",
        "pattern": "^/(h$|help$)",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/start",
        "pattern": "^/start",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/stop",
        "pattern": "^/stop",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/active",
        "pattern": "^/active",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/version",
        "pattern": "^/(v$)|(version$)",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/mute",
        "pattern": "^\/mute[^s]",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/mutes",
        "pattern": "^\/mutes$",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/rooms",
        "pattern": "^\/rooms$",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/select",
        "pattern": "^\/select",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/region",
        "pattern": "^\/region$",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/regions",
        "pattern": "^\/regions",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/webhook",
        "pattern": "^/hello",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      }
    ],
    "glance": [
      {
        "name": {
          "value": "Pokemon Go Server Status"
        },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "serverStatus.glance",
        "icon": {
          "url": "{{localBaseUrl}}/img/icon.jpg",
          "url@2x": "{{localBaseUrl}}/img/icon.jpg"
        }
      }
    ]
  }
}
