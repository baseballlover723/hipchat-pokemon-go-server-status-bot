{
  "key": "pokemon-go-server-status-bot",
  "name": "Pokemon Go Server Status Bot",
  "description": "My very first HipChat add-on",
  "vendor": {
    "name": "Philip Ross",
    "url": "https://github.com/baseballlover723/"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room",
        "admin_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/logo.png",
        "url@2x": "{{localBaseUrl}}/img/logo.png"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": [
      {
        "url": "{{localBaseUrl}}/server",
        "pattern": "^/server",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/add",
        "pattern": "^/add",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/remove",
        "pattern": "^/remove",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/subs",
        "pattern": "^/subs",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/help",
        "pattern": "^/help",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      },
      {
        "url": "{{localBaseUrl}}/webhook",
        "pattern": "^/hello",
        "event": "room_message",
        "name": "Hello!",
        "authentication": "jwt"
      }
    ],
    "glance": [
      {
        "name": {
          "value": "Hello!"
        },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "sample.glance",
        "target": "sample.sidebar",
        "icon": {
          "url": "{{localBaseUrl}}/img/logo.png",
          "url@2x": "{{localBaseUrl}}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "sample.sidebar",
        "name": {
          "value": "Hello Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "{{localBaseUrl}}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "sample.dialog",
        "title": {
          "value": "Hello Dialog!"
        },
        "url": "{{localBaseUrl}}/dialog",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Say Hello!"
            },
            "key": "sample.dialog.action",
            "enabled": true
          },
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
